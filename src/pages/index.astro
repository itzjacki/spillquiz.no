---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Spillquiz med Marius og Jakob">
  <main>
    <img class="logo" src="spillquiz-logo-web.png" alt="Spillquiz med Marius og Jakob">
	<div class="socialsWrapper">
		<a class="socialsLink" href="https://forms.gle/k1KCATvPU4xFrr7w9">Påmelding <span style="color: #ffd790">SPILL</span>QUIZ 7. november →</a>
		<a class="socialsLink" href="https://instagram.com/spillquiz.no">Instagram →</a>
	</div>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 2rem;
		min-height: 100vh;
		justify-content: center;
  }
  	.socialsWrapper {
		display: flex;
		flex-direction: column;
		gap: 1rem;
		align-items: center;
		
  	}	
	.logo{
		max-width: 20rem;
		padding: 0 1rem;
	}
	.socialsLink{
		color: #fcfcfc;
		text-decoration: none;
		font-size: 1.125rem;
		padding: 0.5rem 1rem;
		border-radius: 0.5rem;
		background-color: #fcfcfc44;
		transition: all 0.2s;
		width: fit-content;

		&:hover{
			background-color: #fcfcfc66;
			color: #ffd700;
		}
	}
</style>
