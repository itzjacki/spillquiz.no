---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Spillquiz med Marius og Jakob">
  <main>
    <img
      class="logo"
      src="spillquiz-logo-web.png"
      alt="Spillquiz med Marius og Jakob"
    />
    <div class="socialsWrapper">
      <a class="socialsLink" href="https://forms.gle/e8TGtcCTqh8CtnPn7"
        >Påmelding <span style="color: #ffd790">SPILL</span>QUIZ 6. februar →</a
      >
      <a class="socialsLink shortLink" href="https://discord.gg/Hb6EEZ5tYt"
        ><span>Discord</span><span>→</span></a
      >
      <a class="socialsLink shortLink" href="https://instagram.com/spillquiz.no"
        ><span>Instagram</span><span>→</span></a
      >
      <a class="socialsLink shortLink" href="https://twitch.tv/spillquiz"
        ><span>Twitch</span><span>→</span></a
      >
    </div>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2rem;
    min-height: 100vh;
    min-height: 100dvh;
    justify-content: center;
  }
  .socialsWrapper {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
  }
  .logo {
    max-width: 20rem;
    padding: 0 1rem;
  }
  .socialsLink {
    color: #fcfcfc;
    text-decoration: none;
    font-size: 1.125rem;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    background-color: #fcfcfc44;
    transition: all 0.2s;
    width: fit-content;

    &:hover {
      background-color: #fcfcfc66;
      color: #ffd700;
    }
  }

  .shortLink {
    min-width: 9rem;
    display: flex;
    gap: 0.5rem;
    justify-content: space-between;
  }
</style>
